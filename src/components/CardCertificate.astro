---
const {link, src, alt} = Astro.props
---
<a href={link} target="_blank" rel="noopener noreferrer">
    <img
      src={src}
      alt={alt}
      class="w-20 h-20 md:w-60 md:h-40 min-w-40 min-h-28 object-cover border border-gray-700 rounded-2xl filter grayscale hover:grayscale-0 transform transition duration-300 ease-in-out hover:scale-105"
    />
  </a>